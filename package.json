{
  "name": "@freibergergarcia/phone-a-friend",
  "version": "1.2.4",
  "description": "CLI relay that lets AI coding agents collaborate",
  "keywords": [
    "ai-agent",
    "anthropic",
    "claude-code",
    "cli",
    "codex",
    "command-line-tool",
    "developer-tools",
    "gemini",
    "generative-ai",
    "llm",
    "openai",
    "ollama",
    "typescript"
  ],
  "type": "module",
  "bin": {
    "phone-a-friend": "dist/index.js"
  },
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "dev": "tsup src/index.ts --format esm --watch",
    "bump:patch": "node scripts/bump-version.mjs patch",
    "bump:minor": "node scripts/bump-version.mjs minor",
    "bump:major": "node scripts/bump-version.mjs major"
  },
  "files": [
    "dist/",
    ".claude-plugin/",
    "commands/",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=20.12"
  },
  "license": "MIT",
  "author": "Bruno Freiberger",
  "dependencies": {
    "@inquirer/prompts": "^8.3.0",
    "chalk": "^5.6.2",
    "commander": "^14.0.3",
    "ink": "^6.8.0",
    "ora": "^9.3.0",
    "react": "^19.2.4",
    "react-devtools-core": "^7.0.1",
    "smol-toml": "^1.6.0"
  },
  "devDependencies": {
    "@types/node": "^25.3.0",
    "@types/react": "^19.2.14",
    "ink-testing-library": "^4.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.4.0",
    "vitest": "^4.0.18"
  }
}
