#!/usr/bin/env bash
set -euo pipefail

if ! command -v python3 >/dev/null 2>&1; then
  echo "Python 3 is required to run phone-a-friend. Install it from https://www.python.org/downloads/ or your package manager (macOS: brew install python)." >&2
  exit 1
fi

SCRIPT_DIR="$(cd "$(dirname "$0")" && pwd)"
export PYTHONPATH="${SCRIPT_DIR}:${PYTHONPATH:-}"
exec python3 -m phone_a_friend.cli "$@"
